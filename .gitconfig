# some examples from http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/

[user]
	name = Peter Nemeth
	email = peter.nemeth@prezi.com
	mail = peter.nemeth@prezi.com

[color]
	ui = true

[credential]
	helper = osxkeychain

[alias]
	ci = commit
	co = checkout
	st = status
	up = pull --rebase
	sync = pull --rebase origin master
	df = diff
	br = branch
	rb = rebase
	rbc = rebase --continue
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

[push]
	default = simple

[core]
	editor = subl -n -w
